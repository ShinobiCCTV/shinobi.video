        <div class="doc-wrapper">
            <div class="container">
                <div id="doc-header" class="doc-header text-center">
                    <h1 class="doc-title"><i class="icon fa fa-bolt"></i> <%= Title %></h1>
                </div><!--//doc-header-->
                <div class="doc-body">
                    <div class="doc-content">
                        <div class="content-inner">
                            <section id="download-section" class="doc-section">
                                <h2 class="section-title">Download</h2>
                                <div class="section-block">
                                    <blockquote><p>If you have questions please post on Reddit or Discord. Due to limited resources support time is limited. Ordering a support package will give you priority for support.</p><small>Moe Alam</small></blockquote>
                                    <a class="btn btn-success btn-ghost" href="<%= config.downloadLink %>">Download</a>
                                </div>
                            </section><!--//doc-section-->
                            <section id="requirement-section" class="doc-section">
                                <h2 class="section-title">Requirements</h2>
                                <div class="section-block">
                                    <ul>
                                        <li>MySQL Server and Client</li>
                                        <li>Node.js 7.2.0 or higher

                                        <ul>
                                        <li>check your version with <code>nodejs -v</code> or <code>node -v</code>
                                        </li>
                                        </ul>
                                        </li>
                                        <li>FFMPEG 3.2.4 or higher with libvpx and libx264.

                                        <ul>
                                        <li>Here are some pre built versions of FFMPEG. Just drop them in <code>/usr/bin</code> and you should be good to go.
                                            <ul>
                                                <li><a href="https://s3.amazonaws.com/cloudcamio/ffmpeg-release-32bit-static.tar.xz">Version 3.3 - 32bit</a></li>
                                                <li><a href="https://s3.amazonaws.com/cloudcamio/ffmpeg-release-64bit-static.tar.xz">Version 3.3 - 64bit</a></li>
                                                <li><a href="https://s3.amazonaws.com/cloudcamio/ffmpeg-release-armel-32bit-static.tar.xz">Version 3.3 - ARMel</a></li>
                                                <li><a href="https://s3.amazonaws.com/cloudcamio/ffmpeg-release-armhf-32bit-static.tar.xz">Version 3.3 - ARMhf</a></li>
                                            </ul>
                                            </li>
                                        </ul>
                                        </li>
                                        <li>Linux or MacOS base operating system capable of running the previously mentioned libraries and programs.

                                        <ul>
                                        <li>Virtual Machines use Linux.</li>
                                        <li>Currently Windows cannot natively run Shinobi. This is due to the choice of certain exec commands and not the JavaScript itself. You can adapt it for use on Windows but it will take one with a sharp mind and a bold heart.</li>
                                        </ul>
                                        </li>
                                    </ul>
                                </div>
                            </section><!--//doc-section-->
                            <section id="installation-section" class="doc-section">
                               <% Object.keys(pageData).forEach(function(key){ %>
                                <h2 class="section-title"><a id="content-<%- link_id(key) %>" href="#content-<%- link_id(key) %>" class="text-faded"><i class="fa fa-paperclip"></i></a>  <%- key %></h2>
                               <% pageData[key].forEach(function(v,n){ %>
                                    <div class="section-block">
                                        <h3 class="block-title question"><a id="content-<%- link_id(v.description) %>" href="#content-<%- link_id(v.description) %>" class="text-faded"><i class="fa fa-paperclip"></i></a>  <%- v.description %></h3>
                                        <% v.blocks.forEach(function(b,m){ %>
                                            <% var drawListItems = function(b,m){ %>
                                                <li>
                                                    <% Object.keys(b).forEach(function(t,y){ %>
                                                        <% switch(t){
                                                        case 'blockquote': %>
                                                            <blockquote style="border-color:#d9534f"><%- b[t] %></blockquote>
                                                        <% break;
                                                        case 'text': %>
                                                            <div><p><%- b[t] %></p></div>
                                                        <% break;
                                                        case 'code': %>
                                                            <pre><code><%- b[t] %></code></pre>
                                                        <% break;
                                                        case 'list': %>
                                                            <ul>
                                                                <% b[t].forEach(drawListItems) %>
                                                            </ul>
                                                        <% break;
                                                        case 'orderList': %>
                                                            <ol>
                                                                <% b[t].forEach(drawListItems) %>
                                                            </ol>
                                                        <% break; %>
                                                        <% } %>
                                                    <% }) %>
                                                </li>
                                            <% } %>
                                            <% Object.keys(b).forEach(function(t,y){ %>
                                                <% switch(t){
                                                case 'ejs': %>
                                                    <%- include('blocks/install/'+b[t]+'.ejs')%>
                                                <% break;
                                                case 'blockquote': %>
                                                    <blockquote style="border-color:#d9534f"><%- b[t] %></blockquote>
                                                <% break;
                                                case 'text': %>
                                                    <div><p><%- b[t] %></p></div>
                                                <% break;
                                                case 'code': %>
                                                    <pre><code><%- b[t] %></code></pre>
                                                <% break;
                                                case 'list': %>
                                                    <ul>
                                                        <% b[t].forEach(drawListItems) %>
                                                    </ul>
                                                <% break;
                                                case 'orderList': %>
                                                    <ol>
                                                        <% b[t].forEach(drawListItems) %>
                                                    </ol>
                                                <% break; %>
                                                <% } %>
                                            <% }) %>
                                        <%  }) %>
                                    </div>
                                <%  }) %>
                                <%  }) %>
                            </section><!--//doc-section-->
                            <section>
                                <% include blocks/support.ejs %>
                            </section><!--//doc-section-->                            
