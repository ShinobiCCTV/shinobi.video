<div class="text-center donations-block">
    <div class="flipper">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script> <!-- header --> <ins class="adsbygoogle"      style="display:inline-block;width:320px;height:100px"      data-ad-client="ca-pub-3391236677062948"      data-ad-slot="3479368911"></ins> <script> (adsbygoogle = window.adsbygoogle || []).push({}); </script>
    </div>
    <a href="/docs/donate" style="text-decoration:none">
    <h3 class="donationTag">Contributions this Month<br><small>Please consider ordering a support package to contribute. <i class="fa fa-smile-o"></i></small></h3>
    <div class="progress donations">
      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0"
      aria-valuemin="0" aria-valuemax="100" style="width:0%">
        0%
      </div>
    </div>
    </a><br>
    <a href="/docs/donate" class="btn btn-sm btn-default">Donate</a>
</div>
<style>
    .donations-block{position:relative;}
    .donations-block .flipper{position:absolute;top:0;left:0;height:0;width:100%;overflow:hidden;z-index:10}
    .donations-block.flipped .flipper{height:auto}
.donations {max-width:400px;width:100%;background:#83a1d2;border: 1px solid #4285f4;display:inline-block;}
.donations .progress-bar{background:#4285f4;color:#fff}
</style>
<script>
$(document).ready(function(){
    $.donate={e:$('.donations-block')}
    setInterval(function(){
        $.donate.e.toggleClass('flipped')
    },3000)
    if(!window.donations==true){
        window.donations=true;
        $.getJSON('/donations.json',function(x){
            $('.donations .progress-bar').css('width',x.percent+'px').text('$'+x.total)
            $('.donationTag').attr('title','$'+x.total+' of $'+x.donationMax)
            if(parseFloat(x.total)>=600){
                window.canRunAds=true
                $('#whyYouBlock').remove()
                $('#follower').remove()
                $('.adsbygoogle').remove()
            }
            x.e=$('.donorNames')
            if(x.names.length>0){
                $.each(x.names,function(n,v){
                    x.e.append('<li>'+v+'</li>')
                })
            }else{
                x.e.html("No donors this month :'(")
            }
        })
    }
})
</script>