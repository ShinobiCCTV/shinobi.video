                        <li><a href="#linksDownloads" data-toggle="tab">Apps, Firmware &amp; Manuals</a></li>
                        <% } %>
                        <li><a href="#service-three" data-toggle="tab">Reviews</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade in active" id="service-one">

                            <section class="product-info">
                                <p><%-product.description%></p>
                                <% if(product.features&&product.features.length>0){ %>
                                    <h3>Features</h3>
                                    <ul class="features">
                                        <% product.features.forEach(function(v,n){ %>
                                        <li><%-v%></li>
                                        <% }) %>
                                    </ul>
                                <% } %>
                                <h3>Package Includes</h3>
                                <ul class="packageIncludes">
                                    <% product.packageIncludes.forEach(function(v,n){ %>
                                    <li><%-v%></li>
                                    <% }) %>
                                </ul>
                                <h3>Specifications</h3>
                                <ul class="specifications">
                                    <% Object.keys(product.specifications).forEach(function(b,m){
                                        if(product.specifications[b]===1){
                                            product.specifications[b]='&nbsp;<i class="fa fa-check text-success"></i>&nbsp;'
                                        }
                                        %>
                                    <li><b><%-b%></b><span class="pull-right"><%-product.specifications[b]%></span></li>
