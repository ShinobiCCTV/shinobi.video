<section id="learn">
<div class="container-fluid">
    <div class="content-wrapper">	
		<div class="item-container">
			<div class="container no-wpadding-container">	
				<div class="row flex-table">
				<div class="col-md-2 hidden-xs">
                        <ul id="doc-menu" class="nav doc-menu hidden-xs affix-top doc-menu-background" data-spy="affix">
                            <li><a href="/">Home</a></li>
                            <li><a href="/docs/cameras">Connection URLs</a></li>
                            <li><a href="/support">Support</a></li>
                            <li><a href="/metal">Metal</a></li>
                            <li>
                                <a href="/shop">Shop</a>
                                <ul class="nav doc-sub-menu">
                                    <% Object.keys(products).forEach(function(n,v){
                                    v=products[n]
                                    %>  
                                    <li><a href="/shop/<%-v.id%>"><%-v.stripe.name%></a></li>
                                    <% }) %>
                                </ul>
                            </li>
                            <li><a href="/shop/tos">Terms of Service</a></li>
                            <li><a href="/shop/rebate">Rebate</a></li>
                            <li><a href="/shop/returns">Returns</a></li>
                            <li><a href="/shop/tos#warranty">Warranty</a></li>
                            <li><a href="/shop/tos#shipping">Shipping</a></li>
                        </ul>
                </div>
				<div class="col-md-10">
				<div class="col-md-12">
				<div class="row ">
					<div class="product col-md-6 service-image-left">
                        <div id="item-display" class="img imgPop" src="<%-product.images[0]%>" style="background-image:url(<%-product.images[0]%>)"></div>
					</div>
                    <div class="col-md-6 product-details">
                        <div class="product-title"><%-product.name%></div>
                        <div class="product-desc"><%-product.shortDescription%></div>
<!--                        <div class="product-rating"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>-->
                        <hr>
                        <div class="product-price"><span class="currencyType">$</span><span class="amount"><%- product.amount %></span> <span class="currency"><%- product.currency.toUpperCase() %></span></div>
                        <div id="moreText">
                            <div><small><a href="/shop/rebate">Mail In Rebate : $<span class="rebate"></span> <span class="currency"><%- product.currency.toUpperCase() %></span></a></small></div>
                            <div><small id="multi_total"></small></div>
