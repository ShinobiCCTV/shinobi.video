	cursor: pointer;
	opacity: 1;
}

.service-image-left {
	padding-right: 50px;
}

.service-image-right {
	padding-left: 50px;
}

.service-image-left .img,.service-image-right .img{
	max-width: 100%;
    background-position:center;
    background-size:contain;
    background-repeat:no-repeat;
}
