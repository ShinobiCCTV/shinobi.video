                        <div class="tab-pane fade" id="linksDownloads">
                            <ul class="download-list">
                                <% product.links.forEach(function(v,n){ %>
                                <li>
                                    <% switch(v.type){
                                        case'download':
                                            %><i class="fa fa-download"></i> <%
                                        break;
                                        case'link':
                                            %><i class="fa fa-paperclip"></i> <%
                                        break;
                                    } %>
                                    <a href="<%- v.href %>" <% if(v.type==="download"){%>download<%} %>><%- v.label %></a>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                        <% } %>
                    </div>
                </div>
                </div>
                </div>
                </div>
		</div>
	</div>
</div>
</div>
</section>
<script type="text/javascript">
$(document).ready(function(){
    $('[rel="tooltip"]').tooltip();
    $('body')
        .on('load','#dsq-app1',function(){
            $(this).css('height','auto')
        })
        .resize(productImageResize)
        .resize()
        
    $('#buy_total')
        .change(function(){
            var total = parseInt($(this).val())
            var moreText = $('#moreText')
            var rebateBase = parseInt(<%-product.rebateBase%>) || 10
            var rebateElement = $('.rebate')
            var totalPriceElement = $('#multi_total')
            if(total<=1||isNaN(total)){
                total=1
                $(this).val(total)
                moreText.hide()
            }else{
                moreText.show()
                rebateElement.text(rebateBase * total)
                totalPriceElement.text('x'+total+' : $'+total*<%-product.amount%>+' <%-product.currency.toUpperCase()%>')
            }
            $('#buy_now').unbind('click').click(function(){
                var stripe=<%-JSON.stringify(product.stripe)%>
                stripe.name=total+' x <%-product.stripe.name%>'
                stripe.amount=total*<%-product.stripe.amount%>
                handler.open(stripe);
            })
        })
        .change()
    $('[total_step]')
        .click(function(){
            var total = parseInt($('#buy_total').val())
            var step = parseInt($(this).attr('total_step'))
            var newTotal = step+total
            $('#buy_total').val(newTotal).change()
        })
});
var productImageResize=function(){
    var ele=$('#item-display')
    ele.css('height',ele.width())
}
$('.flip-card').click(function(){
    var $card = $(this).parents('.card-container');
    if($card.hasClass('hover')){
        $card.removeClass('hover');
    } else {
        $card.addClass('hover');
    }
})
//stripe : Close Checkout on page navigation:
window.addEventListener('popstate', function() {
  handler.close();
});
</script>